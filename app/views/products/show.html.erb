<h1><%= @product.name %></h1>

<div class="row">
<div class="span12">
<%= render 'cart' %>
<p id="notice"><%= notice %></p>

<p>
  <%= image_tag(@product.imageurl) %>
</p>

<p>
  <b>Price:</b>
  <%= number_to_currency(@product.price) %>
</p>

<ol>
  <b>Current Reviews</b>
  <% @reviews.each do |review| %>
    <li><%= review.body %></li>
  <%end%>
</ol>

<p>
  <a href="/reviews/new?product_id=<%= @product.id %>">New Review</a>
</p>

<p>
  <%= render 'cartform' %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
</div>
</div>
